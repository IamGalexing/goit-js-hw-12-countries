{{#each this}}
<div class="search__specific-result-text-block">
    <h1 class="search__specific-result-name">{{name}}</h1>
    <p class="search__specific-result-capital"><span>Capital:</span> {{capital}}</p>
    <p class="search__specific-result-population"><span>Population:</span> {{population}}</p>
    <ul class="search__specific-result-languages-list"><span>Languages:</span>
        {{#each this.languages}}
        <li class="search__specific-result-languages-item">{{name}}</li>
        {{/each}}
    </ul>
</div>
<div class="search__specific-result-image-block">
    <img class="search__specific-result-flag" src="{{flag}}" alt="flag of {{name}}">
</div>
{{/each}}